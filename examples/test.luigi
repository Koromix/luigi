# Opérateurs arithmétiques : +, -, *, /
# Opérateurs logiques : =, >, <, <=, >=
# Combinateurs : or, and

func inv(idx)
    return - idx
end

liste = [.1, 2.2,
         3.3, 4.4]
log(liste)
log(liste[inv(---1)])

if nom_variable1 = 11 - 1
    log("Cas 1")
elif nom_variable2 = "hello"
    log("Cas 2")
else
    log("Cas 3")
end

func somme(x, y)
    return x + y
end

func print_somme(x, y)
    log(somme(x, y))
end

func soyons_fous()
    log("Soyons fou" + "s")
end

log("Hello world")
print_somme(1 - (12 + 9), 2 * 19)
soyons_fous()

for item in liste
    log(item)
end
for item in []
    log(item)
end
for item in [2, 3, "hello"]
    log(item)
end

