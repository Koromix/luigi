    log("Cas 2")
else
    log("Cas 3")
end

func somme(x, y)
    return x + y
end

func print_somme(x, y)
    log(somme(x, y))
end

func soyons_fous()
    log("Soyons fou" + "s")
end

log("Hello world")
print_somme(1 - (12 + 9), 2 * 19)
soyons_fous()

