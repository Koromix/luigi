r_window("Screensaver")

x = 10
y = 10
vx = 1
vy = 1

while r_run()
    size = r_size()
    text =  "" + size[0] + "x" + size[1]
    box = r_text(x, y, "red", text)

    if vx = 1 and x >= size[0] - box[0] then vx = -1
    if vx = -1 and x <= 0 then vx = 1
    if vy = 1 and y >= size[1] - box[1] then vy = -1
    if vy = -1 and y <= 0 then vy = 1

    x = x + vx * 2
    y = y + vy * 2
end
